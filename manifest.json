{
  "manifest_version": 3,
  "name": "copy-youtube-link",
  "version": "1.5",
  "description": "Copy and bookmark YouTube URL with the timestamp via Cmd+C and s/d keys",
  "icons": {
    "16": "yt-16.png",
    "32": "yt-32.png",
    "128": "yt-128.png"
  },
  "action": {
    "default_title": "copy-youtube-link",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["clipboardWrite", "scripting", "activeTab"]
}