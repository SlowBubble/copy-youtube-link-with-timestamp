{
  "manifest_version": 3,
  "name": "copy-youtube-link",
  "version": "1.4",
  "description": "Copy and bookmark YouTube URL with the timestamp via Cmd+C and Cmd+V",
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "128": "android-chrome-128x128.png"
  },
  "action": {
    "default_title": "copy-youtube-link",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["clipboardWrite", "storage", "scripting", "activeTab"]
}